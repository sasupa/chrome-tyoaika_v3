{
  "manifest_version": 2,

  "name": "Project Timer Plugin",
  "description": "This extension will follow your project work",
  "version": "2.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["jquery-3.4.1.min.js", "env.js", "background.js"],
    "persistent": false
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "permissions": ["alarms", "<all_urls>", "storage", "tabs"]

}